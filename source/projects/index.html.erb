---
layout: page
pageable: true
per_page: 25
---

<% content_for(:title) { "Projects" } %>

<%= page_header "Projects", "Selected projects and free open source software" %>

<section id="projects" class="index-posts">
  <% blog("projects").articles.each.with_index do |article, i| %>
    <article class="index-post">
      <header class="index-title">
        <%= link_to article.title, (article.data.homepage || article) %>
      </header>
      <% if article.data.summary %>
        <p class="index-alt-title subtle"><%= article.data.summary %></p>
      <% end %>
      <section class="mt-6">
        <%= article.body %>
        <% if article.data.links %>
          <p>
            <% article.data.links.each.with_index do |(name, url), j| %>
              <%= link_to name, url %>
              <% unless j == article.data.links.length - 1 %>
                &middot;
              <% end %>
            <% end %>
          </p>
        <% end %>
      </section>
    </article>
    <% unless i == blog("projects").articles.length %>
      <br /><hr /><br />
    <% end %>
  <% end %>
</section>
<section class="signup-form-standalone hero">
  <%= partial "partials/signup" %>
</section>
